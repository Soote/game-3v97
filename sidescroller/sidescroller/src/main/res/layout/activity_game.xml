<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent">

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Menu"
        android:id="@+id/menu"
        android:onClick="showMenu"/>

    <ImageView
        android:id="@+id/spritesheet"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/spritesheet"/>

    <ImageView
        android:id="@+id/level1image"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/level1image"/>

    <ImageView
        android:id="@+id/level2image"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/level2image"/>

    <ImageView
        android:id="@+id/level3image"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/level3image"/>
</LinearLayout>